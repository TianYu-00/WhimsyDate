{
  "GET /users/:user_id/categories": {
    "description": "fetches the categories a user has on their profile",
    "queries": "A valid unique _id"
  },

  "DELETE /users/delete": {
    "description": "allows an account to be deleted based on unique ID",
    "queries": "A valid unique _id"
  },

  "GET /users/:user_id/:category": {
    "description" : "Gets all entries for a user in a given category"
  },

  "GET /foods": {
    "description": "Serves an array of all foods on the database",
    "queries": [
      "food name",
      "booleans for vegetarian, vegan, meat and allergies"
    ],
    "exampleResponse": {
      "success": "true",
      "data": [
        {
          "_id": "6686aa83ef8cf2f140459ff5",
          "food": "Rio's Steakhouse",
          "__v": 0,
          "allergies": true,
          "meat": true,
          "vegan": false,
          "vegetarian": false
        }
      ]
    }
  },
  "POST /foods/add": {
    "description": "allows a user to add a new food option to the database",
    "exampleRequest": {
      "food": "Vegan Burrito",
      "vegetarian": true,
      "vegan": true,
      "meat": false,
      "allergies": false
    },
    "exampleResponse": {
      "success": true,
      "data": {
        "_id": "6687bb6b06be486e73b8767d",
        "food": "Vegan Burrito",
        "vegetarian": true,
        "vegan": true,
        "meat": false,
        "allergies": false
      }
    }
  },

  "GET /movies": {
    "description": "Serves an array of all the movies",
